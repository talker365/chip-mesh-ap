#! /usr/bin/env python
from Adafruit_BME280 import *

sensor = BME280(t_mode=BME280_OSAMPLE_8, p_mode=BME280_OSAMPLE_8, h_mode=BME280_OSAMPLE_8)

degreesF = sensor.read_temperature_f()
pascals = sensor.read_pressure()
inches = sensor.read_pressure_inches()
hectopascals = pascals / 100
humidity = sensor.read_humidity()
dewpoint = sensor.read_dewpoint_f()

print 'Temp      = {0:0.2f} F'.format(degreesF)
print 'Pressure  = {0:0.2f} hPa'.format(hectopascals)
print 'Pressure  = {0:0.2f} in. W.C.'.format(inches)
print 'Humidity  = {0:0.2f} %'.format(humidity)
print 'DewPoint  = {0:0.2f} F'.format(dewpoint)
